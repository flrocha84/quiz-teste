<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#34f3"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/titulo_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="122dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="123dp"
        android:layout_marginBottom="618dp"
        android:adjustViewBounds="true"
        android:src="@drawable/titulo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/escolhaMateria"
        android:layout_marginStart="30dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="20dp"
        android:text="Escolha a Matéria!"
        android:textColor="#99f1"
        />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/escolhaMateria"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/quimicaLayout"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="150dp"
            android:background="@drawable/round_back_white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            android:weightSum="1"  >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/qui"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Química"
                android:textColor="#CCCCCC"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/fisicaLayout"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="150dp"
            android:background="@drawable/round_back_white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            android:weightSum="1"  >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/fis"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Física"
                android:textColor="#CCCCCC"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/layout1"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/biologiaLayout"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="150dp"
            android:background="@drawable/round_back_white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            android:weightSum="1"  >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/bio"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Biologia"
                android:textColor="#CCCCCC"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/historiaLayout"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="150dp"
            android:background="@drawable/round_back_white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            android:weightSum="1"  >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/hist"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="História"
                android:textColor="#CCCCCC"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/startQuizBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar!"
        android:layout_below="@id/layout2"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="16sp"
        android:background="@drawable/round_back_green"/>

    
</RelativeLayout>